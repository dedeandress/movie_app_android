<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_movie_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_marginEnd="@dimen/dp_32"
        android:text="In Theater"
        style="@style/ContentTextStyle.Bold"
        android:textSize="@dimen/sp_32"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/v_line"
        android:background="@drawable/bg_selected_movie_menu"
        android:layout_width="@dimen/dp_40"
        app:layout_constraintStart_toStartOf="@id/tv_movie_menu"
        app:layout_constraintTop_toBottomOf="@id/tv_movie_menu"
        android:layout_height="@dimen/dp_6"/>

</androidx.constraintlayout.widget.ConstraintLayout>